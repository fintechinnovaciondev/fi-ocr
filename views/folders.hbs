<div class="space-y-6">
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex flex-col md:flex-row justify-between items-center gap-4">
        <div>
            <h2 class="text-xl font-bold text-gray-800">Gestión por Carpetas</h2>
            <p class="text-sm text-gray-500">Documentos agrupados por lote (`externalId`).</p>
        </div>
        
        <form action="/admin/folders" method="GET" class="flex-1 max-w-md w-full relative">
            <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            <input type="text" name="q" value="{{filters.q}}" placeholder="Buscar carpeta por ID..." 
                class="w-full pl-12 pr-4 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition text-sm">
            <input type="hidden" name="page" value="1">
        </form>

        <div class="flex gap-4 text-xs font-bold uppercase tracking-wider">
            <div class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded-full bg-green-600"></span> Validado
            </div>
            <div class="flex items-center gap-2">
                <span class="w-2.5 h-2.5 rounded-full bg-red-100 border border-red-200"></span> Fallido
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {{#each folders}}
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition group">
            <div class="flex justify-between items-start mb-4">
                <div class="w-10 h-10 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center text-lg">
                    <i class="fas fa-folder"></i>
                </div>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-bold uppercase tracking-tight
                    {{#if (eq this.status "validated")}}bg-green-600 text-white
                    {{else if (eq this.status "completed")}}bg-green-100 text-green-700
                    {{else if (eq this.status "failed")}}bg-red-100 text-red-700
                    {{else}}bg-blue-100 text-blue-700{{/if}}">
                    {{this.status}}
                </span>
            </div>
            
            <h3 class="font-bold text-gray-800 text-base mb-1 truncate" title="{{this.externalId}}">{{this.externalId}}</h3>
            <p class="text-xs font-bold text-gray-400 uppercase mb-4">{{this.tenantId}}</p>

            <div class="flex items-center justify-between pt-4 border-t border-gray-50">
                <div class="flex flex-col">
                    <span class="text-xs font-bold text-gray-900">{{this.count}} documentos</span>
                    <span class="text-xs text-gray-400 truncate w-24">Act: {{this.updatedAt}}</span>
                </div>
                <a href="/admin/search?q={{this.externalId}}" class="w-7 h-7 rounded-lg bg-gray-50 text-gray-400 group-hover:bg-indigo-600 group-hover:text-white flex items-center justify-center transition">
                    <i class="fas fa-arrow-right text-xs"></i>
                </a>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Paginación -->
    {{#if (gt pages 1)}}
    <div class="flex items-center justify-between bg-white p-4 rounded-xl border border-gray-100">
        <div class="flex gap-2">
            {{#if (gt page 1)}}
                <a href="/admin/folders?page={{sub page 1}}&q={{filters.q}}" class="px-4 py-2 text-xs font-bold text-indigo-600 bg-white border border-indigo-100 rounded-lg hover:bg-indigo-50 transition">
                    <i class="fas fa-chevron-left mr-2"></i> Anterior
                </a>
            {{/if}}
            
            {{#if (lt page pages)}}
                <a href="/admin/folders?page={{add page 1}}&q={{filters.q}}" class="px-4 py-2 text-xs font-bold text-indigo-600 bg-white border border-indigo-100 rounded-lg hover:bg-indigo-50 transition">
                    Siguiente <i class="fas fa-chevron-right ml-2"></i>
                </a>
            {{/if}}
        </div>
        <span class="text-xs font-bold text-gray-400 uppercase">
            Página <span class="text-indigo-600">{{page}}</span> de {{pages}}
        </span>
    </div>
    {{/if}}

    {{#unless folders}}
    <div class="py-20 text-center bg-white rounded-2xl border border-dashed border-gray-300 w-full col-span-full">
        <i class="fas fa-search text-4xl text-gray-200 mb-4"></i>
        <p class="text-gray-500 font-medium">No se encontraron carpetas que coincidan</p>
    </div>
    {{/unless}}
</div>