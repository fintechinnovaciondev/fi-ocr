<div class="p-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Tipos de Documentos</h1>
            <p class="text-gray-600">Administra los esquemas JSON y estrategias de extracción por cliente.</p>
        </div>
        <a href="/admin/configs/new" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center">
            <i class="fas fa-plus mr-2"></i> Nuevo Tipo
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <table class="w-full text-left">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Tenant ID</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Slug</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Estrategias</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each configs}}
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 font-medium text-gray-900">{{this.tenantId}}</td>
                    <td class="px-6 py-4">
                        <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-semibold">
                            {{this.slug}}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        <div class="flex flex-wrap gap-2">
                            {{#each this.strategyStack}}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-indigo-50 text-indigo-700 border border-indigo-100">
                                <i class="fas fa-layer-group mr-1.5 opacity-50 text-xs"></i>
                                {{this.name}}
                            </span>
                            {{/each}}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <a href="/admin/configs/{{this._id}}" class="text-indigo-600 hover:text-indigo-900 mr-4">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button data-id="{{this._id}}" class="btn-delete-config text-red-600 hover:text-red-900">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
document.querySelectorAll('.btn-delete-config').forEach(btn => {
    btn.addEventListener('click', function() {
        deleteConfig(this.dataset.id);
    });
});

async function deleteConfig(id) {
    showConfirm(
        'Eliminar Configuración',
        '¿Estás seguro de eliminar esta configuración? Esta acción no se puede deshacer.',
        async () => {
            try {
                const res = await fetch(`/api/admin/configs/${id}`, { method: 'DELETE' });
                if (res.ok) {
                    showToast('Configuración eliminada correctamente');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast('Error al eliminar la configuración', 'error');
                }
            } catch (err) {
                showToast('Error de red al eliminar la configuración', 'error');
            }
        }
    );
}
</script>
